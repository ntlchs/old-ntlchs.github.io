---
const { id, name, src } = Astro.props;
---

<div id="card">
  <div>
    <img src={src} alt="" class="drop-shadow" id={id} />
    <p class="skill">{name}</p>
  </div>
</div>

<style>
  #card {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  img {
    margin-top: 20px;
    height: 70px;
    width: 70px;
  }

  p {
    font-family: var(--font);
    margin: 0 auto;
    font-size: 18px;
    margin: 0 0 20px 0;
    padding-top: 10px;
  }

