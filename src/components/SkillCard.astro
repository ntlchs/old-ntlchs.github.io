---
const { id, name, src } = Astro.props;
---

<div id="card">
  <div>
    <img src={src} alt="" />
    <p id={id} class="skill">{name}</p>
  </div>
</div>

<style>
  #card {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  img {
    height: auto;
    width: 60px;
  }

  p {
    font-size: 40px;
    font-family: "Patrick Hand", sans-serif;
    font-size: 24px;
  }
</style>
