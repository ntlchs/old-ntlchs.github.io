---
import Button from "./Button.astro";
const { id, text } = Astro.props;
---

<div
  id="copy_area"
  class="flex w-11/12 p-4 my-4 mx-auto items-center justify-center"
>
  <p id={id} class="copiable font-bold font-lg w-7/12" id={text}>
    {text}
  </p>
  <Button id="copy_btn" text="Copy" listOfClasses={["text-sm"]} />
  <p id="copy_toast" class="hidden border m-auto text-lg p-4 bg-white">
    copied to clipboard
  </p>
</div>
<script>
  import "./copyToClipboard.js";
</script>

<style>
  #copy_toast {
    box-shadow: 4px 4px var(--black);
  }

  /* center toast */

  /* end */
</style>
