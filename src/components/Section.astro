---
const { id, title } = Astro.props;
---

<div id={id} class="page">
  <h1>{title}</h1>
  <slot />
</div>

<style>
  .page img {
    width: 40%;
  }

  .page h1 {
    text-align: center;
    text-transform: uppercase;
    font-size: 26px;
    letter-spacing: 1px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    grid-template-rows: 16px 0;
    grid-gap: 22px;
  }

  .page h1:after,
  .page h1:before {
    content: " ";
    display: block;
    border-bottom: 5px solid var(--accent_four);
  }

  #about {
    width: 100%;
    position: relative;
    margin: 30px 0;
    margin-bottom: 2em;
    overflow-y: hidden;
    box-sizing: border-box;
  }

  #skills h1 {
    padding-bottom: 0.5em;
  }

  .page {
    background-color: var(--white);
  }
</style>
