---
const { id, title } = Astro.props;
---

<div id={id} class="page">
  <h1>{title}</h1>
  <slot />
</div>

<style>
  .page img {
    width: 40%;
  }
  h1 {
    padding-top: var(--regular-padding);
    text-transform: uppercase;
    letter-spacing: 0.2em;
  }

  #about {
    background: #fff;
    width: 100%;
    position: relative;
    margin: 30px 0;
    margin-bottom: 60px;
  }

  #about:after {
    position: absolute;
    content: "";
    top: 100%;
    height: 20px;
    width: 100%;
    left: 0;
    background: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/23618/rip.svg)
      bottom;
    background-size: 200%;
  }

  #about:before {
    position: absolute;
    content: "";
    bottom: 100%;
    height: 20px;
    width: 100%;
    left: 0;
    background: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/23618/rip.svg)
      bottom;
    background-size: 200%;
    rotate: 180deg;
  }

  .page {
    position: relative;
    margin: 2em 0;
    padding: 1em 0;
  }

  #projects {
    background-color: rgb(236, 255, 253);
  }
</style>
