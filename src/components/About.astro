---
import Button from "../components/Button.astro";
import Section from "./Section.astro";

const sentences = {
  a: "Curious-minded, always passionated about science and technology",
  b: "Currently self-learning web development, now enrolling in college to earn a Computer Science BS degree",
  c: "Living in Porto Alegre, Brazil",
};
---

<Section id="about" title="About Me">
  <div id="girl" class="paper border">
    <div class="tape"></div>
    <img src="assets/girl.svg" alt="girl" id="girl_img" class="shadow" />
    <div class="tape"></div>
  </div>
  <ul>
    <li>{sentences.a}</li>
    <li>{sentences.b}</li>
    <li>{sentences.c}</li>
  </ul>

  <Button url="cv.pdf" text="Resume" id="cv" />
</Section>

<style>
  #girl_img {
    max-width: 90%;
    width: 300px;
    height: 300px;
  }

  #girl {
    position: relative;
    margin: auto;
    padding: 10px;
    width: 90%;
    height: auto;
    background-size: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #girl_card:after {
    position: absolute;
    content: "";
    width: 100%;
    height: 100%;
  }

  .tape {
    position: absolute;
    width: 100%;
  }

  .tape:first-of-type {
    top: 0;
  }

  .tape:last-of-type {
    bottom: 0;
  }

  .tape::before,
  .tape::after {
    position: absolute;
    content: "";
    width: 10vmin;
    height: 4vmin;
    background-color: rgb(242, 228, 148);
    opacity: 0.5;
    border-right: 1px dotted var(--black);
    border-left: 1px dotted var(--black);
  }

  .tape:last-of-type::after {
    transform: rotate(-45deg);
    right: -4vmin;
    top: -3vmin;
  }

  .tape:first-of-type::before {
    transform: rotate(-45deg);
    left: -4vmin;
  }

  .tape:first-of-type::after {
    transform: rotate(45deg);
    right: -4vmin;
    top: 0;
  }

  .tape:last-of-type::before {
    transform: rotate(45deg);
    left: -4vmin;
    bottom: 0;
  }

  ul {
    text-align: left;
    padding: 20px 40px;
  }

  li {
    padding: 5px 0;
  }
</style>
