---
import ContactIcon from "../LinkIcon.astro";
---

<div id="contact_icons">
  <ContactIcon
    name="gitHub"
    link="https://github.com/ntlchs"
    img="assets/github.svg"
  />
  <ContactIcon
    name="linkedin"
    link="https://www.linkedin.com/in/nataliachies/"
    img="assets/linkedin.svg"
  />
  <ContactIcon
    name="email"
    link="mailto:nataliachies@gmail.com"
    img="assets/email.svg"
  />
</div>

<style>
  #contact_icons {
    /* height: 4em; */
    display: grid;
    grid-template-columns: auto auto auto;
    padding: 0;
    align-items: center;
    margin: 0 auto;
    width: 97%;
    box-sizing: border-box;
  }
</style>
