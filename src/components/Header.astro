---
import Button from "./Button.astro";
import CopiableText from "./CopyAndTooltip.astro";
---

<header id="header">
  <div id="header_card">
    <!-- <img
      src="assets/paper-clip.svg"
      alt="paper clip"
      id="paper_clip"
      class="image"
    /> -->
    <img src="assets/me.svg" alt="avatar" id="avatar" class="image" />
    <h1 id="title">Natalia Chies</h1>
    <p>Welcome to my portfolio!</p>
    <p>
      As a junior web developer, I am excited to show you my skills in creating
      functional and visually appealing experiences.
    </p>
    <CopiableText
      id="copy_email"
      text="nataliachies@gmail.com"
      tooltipText="Copy"
    />
    <Button url="#contact_form" text="Contact Me" class="btn" />
    <img src="assets/curvy-line.svg" alt="" />
  </div>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: auto;
    padding: 0 0 60px 0;
  }

  #header_card {
    background-color: var(--off-white);
    border: 1px solid var(--black);
    position: relative;
    width: 95%;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    box-sizing: border-box;
    overflow-wrap: break-word;
    display: block;
  }

  #paper_clip {
    position: absolute;
    offset-position: inherit;
    height: 4rem;
    left: -1.3rem;
    top: -1rem;
    transform: rotate(1deg);
  }

  #avatar {
    width: 40%;
    /* background-color: var(--light-gray); */
    border-radius: 4%;
    /* box-shadow: 1px 1px var(--gray); */
  }

  #title {
    text-transform: capitalize;
    font-family: var(--title-font);
    font-size: 3rem;
  }

  p {
    font-size: 18px;
  }
</style>
