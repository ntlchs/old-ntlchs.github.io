---
import Section from "./Section.astro";
import SkillCard from "./SkillCard.astro";
---

<div class="paper_with_lines">
  <Section title="Skills" id="skills">
    <div id="skill_names">
      <SkillCard id="html" name="HTML" src="assets/projects/html.svg" />
      <SkillCard id="css" name="CSS" src="assets/projects/css.svg" />
      <SkillCard id="js" name="JavaScript" src="assets/projects/js.svg" />
      <SkillCard id="astro" name="Astro" src="assets/projects/astro.svg" />
    </div>
  </Section>
</div>

<style>
  #skills > h1 {
    padding: 0;
    margin: 0;
  }

  #skill_names {
    display: grid;
    grid-template-columns: auto auto auto;
  }

  .paper_with_lines {
    max-width: 600px;
    width: 98vw;
    margin: auto;
    background: url("assets/white-piece-of-paper.svg");
    background-size: cover;
    margin-bottom: calc(10 * var(--regular-padding));
  }
</style>
