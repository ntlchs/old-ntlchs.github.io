---
import Section from "./Section.astro";
import SkillCard from "./SkillCard.astro";
---

<Section title="Skills" id="skills">
  <div id="skill_names">
    <SkillCard id="html" name="HTML" src="assets/html.svg" />
    <SkillCard id="css" name="CSS" src="assets/css.svg" />
    <SkillCard id="js" name="JavaScript" src="assets/js.svg" />
    <SkillCard id="astro" name="Astro" src="assets/astro.svg" />
    <SkillCard id="react" name="React" src="assets/react.svg" />
  </div>
</Section>

<style>
  #skills > h1 {
    padding: 0;
    margin: 0;
  }

  #skill_names {
    display: grid;
    grid-template-columns: auto auto auto;
  }

  #skills {
    max-width: 600px;
    width: 98vw;
    margin: auto;
    background-size: cover;
    margin-bottom: calc(10 * var(--space));
  }
</style>
