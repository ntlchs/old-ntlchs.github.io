---
import ContactBoard from "./Contact/Board.astro";
import ContactForm from "./Contact/Form.astro";
---

<footer>
  <img
    src="assets/tape-red.svg"
    id="red_tape"
    class="image"
    alt="red tape with white hearts"
  />
  <ContactBoard />
  <ContactForm />
  <p>Copyright Nat√°lia Chies 2022</p>
</footer>

<style>
  :root {
    --tape-width: 200px;
  }

  footer {
    background-color: var(--transparent_gray);
    width: 100vw;
    color: var(--black);
    padding: 2vh 0;
    position: relative;
  }

  footer h1 {
    padding: 5px;
    font-size: 1.8rem;
  }

  footer p {
    font-size: 1rem;
    font-family: "Patrick Hand", sans-serif;
    padding-top: 2vh;
    letter-spacing: 0.2rem;
  }

  #red_tape {
    max-width: var(--tape-width);
    position: absolute;
    left: calc(50% - var(--tape-width) / 2);
    top: -30px;
    filter: drop-shadow(3px 5px 2px rgb(0 0 0 / 0.3));
  }
</style>
