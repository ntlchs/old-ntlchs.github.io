---
import Projects from "./Projects.astro";
import About from "./About.astro";
import Skills from "./Skills.astro";
---

<main id="pages" class="items-center">
  <div
    id="window"
    class="w-full p-0 mx-auto mt-4 grid h-5 border-b-0 border-2 border-solid border-black bg-black"
  >
    <div id="bar" class=""></div>
    <div id="close" class="justify-center border-2 border-black text-sm">âœ–</div>
  </div>
  <div class="wrapper_text border w-full">
    <div class="typing_card">console.log('Hello World!');</div>
  </div>
  <Projects />
  <About />
  <Skills />
</main>

<style>
  /* styling of console.log animated window */

  #window {
    grid-template-columns: 95% 5%;
  }

  #close {
    background-color: var(--accent_two);
  }

  .wrapper_text {
    height: 40%;
    margin: 0 auto var(--space) auto;
    background-color: var(--white);
    /*This part is important for centering*/
    display: grid;
    place-items: center;
    padding: 1rem 0;
  }

  .typing_card {
    width: 20rem;
    animation: typing 4s steps(28) infinite,
      blink 0.5s step-end infinite alternate;
    white-space: nowrap;
    overflow: hidden;
    border-right: 0.12rem solid;
    font-family: monospace;
    font-size: 18px;
    letter-spacing: 0.74px;
  }

  @keyframes typing {
    from {
      width: 0;
    }
  }

  @keyframes blink {
    50% {
      border-color: transparent;
    }
  }
</style>
